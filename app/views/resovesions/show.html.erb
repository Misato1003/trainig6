<h3>予約したイベントの詳細</h3>

<div>
  <div>
    <p>イベント写真</p>
    <p><%= image_tag(@resovesion.event.eventimage.to_s, class: "event-image") %></p>
  </div>
  
  </div>
  <div>
    <p>イベント名</p>
    <p><%= @resovesion.event.eventname %></p>
  </div>
  <div>
    <p>開始日時</p>
    <p><%= @resovesion.event.first_day %></p>
    <p>終了日時</p>
    <p><%= @resovesion.event.last_day %></p>
  </div>
  <div>
    <p>場所</p>
    <p><%= simple_format(@resovesion.event.place) %></p>
  </div>
  <div>
    <p>内容</p>
    <p><%= simple_format(@resovesion.event.content) %></p>
  </div>
  <div>
    <p>予約した日付</p>
    <p><%= @resovesion.day %></p>
  </div>
  <div>
    <p>予約した人数</p>
    <p><%= @resovesion.people %></p>
  </div>
  <div>
    <p>予約した名前</p>
    <p><%= @resovesion.user.username %></p>
  </div>
  <div>
    <p>予約したメールアドレス</p>
    <p><%= @resovesion.user.email %></p>
  </div>
</div>
<div>
  <ul>
    <li><%= link_to "予約したイベントの一覧表", resovesions_path %></li>
    <li><%= link_to "予約の編集", [:edit, @resovesion] %></li>
    <li><%= link_to "イベントの詳細", event_path(@resovesion.event.id) %></li>
    <li><%= link_to "イベントの一覧表", events_path %></li>
  </ul>
</div>
