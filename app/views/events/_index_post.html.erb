<h4>投稿一覧表</h4>
  
<table>
  <thead>
    <tr>
      <th>投稿者の名前</th>
      <th>投稿内容</th>
      <th>作成日</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.nickname %></td>
        <td><%= simple_format(post.impressions) %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
