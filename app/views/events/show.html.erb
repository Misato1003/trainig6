<h4>イベントの詳細</h4>

<div>
  <div>
    <p>イベントの写真</p>
    <p><%= @event.eventimage %></p>
  </div>
  
  <div>
    <p>イベント名</p>
    <p><%= @event.eventname %></p>
  </div>
  
  <div>
    <p>場所</p>
    <p><%= @event.place %></p>
  </div>
  
  <div>
    <p>内容</p>
    <p><%= @event.content %></p>
  </div>
  
  <div>
    <p>開始日</p>
    <p><%= @event.first_day %></p>
  </div>
  
  <div>
    <p>終了日</p>
    <p><%= @event.last_day %></p>
  </div>
  
  <div>
    <p>作成日</p>
    <p><%= @event.created_at.to_s(:datetime_jp) %></p>
  </div>
  
  <div>
    <p>更新日</p>
    <p><%= @event.updated_at.to_s(:datetime_jp) %></p>
  </div>
  
  <div>
    <ul>
      <li><%= link_to 'イベントの一覧表', events_path %></li>
      <li><%= link_to 'イベントの編集', [:edit, @event] %></li>
      <li><%= link_to 'イベントの削除', @event, method: :delete, data: { confirm: "本当に削除しますか?" } %></li>
    </ul>
  </div>
