<h4>イベントの一覧表</h4>

<div>
  <% @events.each do |event| %>
    <div>
      <p>イベント写真</p>
      <p><%= image_tag(event.eventimage.to_s, class: "event-image") %></p>
    </div>
    
    <div>
      <p>イベント名</p>
      <p><%= event.eventname %></p>
    </div>

    <div>
      <p>場所</p>
      <p><%= simple_format(event.place) %></p>
    </div>

    <div>
      <p>開始日</p>
      <p><%= event.first_day %></p>
      <p>終了日</p>
      <p><%= event.last_day %></p>
    </div>

    <div>
      <p>内容</p>
      <p><%= simple_format(event.content) %></p>
    </div>
    
    <%= render 'like', event: event %>
    
    <div>
      <% if current_user.favorite_find(event.id) %>
        <%= link_to 'お気に入りから外す', destroy_favorite_path(event.id), method: :delete %>
      <% else %>
        <%= link_to 'お気に入り登録する', create_favorite_path(event.id), method: :post %>
      <% end %>
    </div>
    <div>
      <p>作成日</p>
      <p><%= event.created_at.to_s(:datetime_jp) %></p>
    </div>
    
    <div>
      <p><%= link_to "詳細", event %></p>
    </div>
    
    <div>
      <p><%= link_to "編集", [:edit, event] %></p>
    </div>
    
    <div>
      <p><%= link_to "削除", event, method: :delete, data: {confirm: "本当に削除しますか?" } %></p>
    </div>
  <% end %>
</div>
